programa
{
	
	funcao inicio()
	{
		inteiro n1, n2, soma

		escreva("Informe um número: ")
		leia(n1)

		escreva("Informe outro número: ")
		leia(n2)

		soma = n1 + n2

		escreva("A soma de ", n1, " + ", n2, " = ", soma)
	}
		// Exercício de somar dois Números
}


